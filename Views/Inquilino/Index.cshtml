@model IEnumerable<proyectoInmobiliaria.NET.Models.Inquilino>

@{
	ViewData["Title"] = "Home Page";
}

@if (TempData["Ok"] is string ok) {
  <div class="alert alert-success">@ok</div>
}
@if (TempData["Error"] is string err) {
  <div class="alert alert-danger">@err</div>
}


<h1>
	Inquilinos
	<div class="btn-group pull-right">
		<a class="btn btn-primary" asp-action="Create" title="Crear"> Crear </a>
	</div>
</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.nombre)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.apellido)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.dni)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.nombre)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.apellido)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.dni)
				</td>
				<td>
					<div class="btn-group" role="group">
						<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id" title="Editar">
							Editar
						</a>
						@if (User.IsInRole("Administrador")) {
							<a class="btn btn-danger btnOpcion" asp-action="Eliminar" asp-route-id="@item.id"
							title="Eliminar">
							Eliminar
						</a>
						}
						<a class="btn btn-secondary" asp-action="Detalles" asp-controller="Inquilino" asp-route-id="@item.id" title="Detalles">
							Detalles
						</a>
					</div>
				</td>
			</tr>
		}	
	</tbody>
</table>
