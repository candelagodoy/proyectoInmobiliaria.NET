@model IEnumerable<proyectoInmobiliaria.NET.Models.Propietario>

@{
    ViewData["Title"] = "Home Page";
}

<h1>
	Propietarios
	<div class="btn-group pull-right">
		<a class="btn btn-primary" asp-action="Create" title="Crear">Crear</a>
	</div>
</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.nombre)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.nombre)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.apellido)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.dni)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.celular)
				</td>
				<td>
					<div class="btn-group" role="group">
						<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id" title="Editar">
							Editar
						</a>
						<a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@item.id" title="Eliminar">
							Eliminar
						</a>
						<a class="btn btn-secondary" asp-action="PorPropietario" asp-controller="Inmuebles" asp-route-id="@item.id" title="Mis Propiedades">
							Por Propietario
						</a>
					</div>
				</td>
			</tr>
		}	
	</tbody>
</table>
