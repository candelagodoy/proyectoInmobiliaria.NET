@model IEnumerable<proyectoInmobiliaria.NET.Models.Contrato>

<div class="container-xxl py-3">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h1 class="h4 mb-0 text-center fw-semibold">Contratos finalizados</h1>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr class="text-uppercase small text-secondary">
                            <th>@Html.DisplayNameFor(model => model.idContrato)</th>
                            <th>@Html.DisplayNameFor(model => model.idInquilino)</th>
                            <th>@Html.DisplayNameFor(model => model.idInmueble)</th>
                            <th class="text-end">@Html.DisplayNameFor(model => model.monto)</th>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.fechaDesde)</th>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.fechaHasta)</th>
                            <th class="text-end">@Html.DisplayNameFor(model => model.idUsuarioAlta)</th>
                            <th class="text-end">@Html.DisplayNameFor(model => model.idUsuarioBaja)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(_ => item.idContrato)</td>
                                <td>@Html.DisplayFor(_ => item.idInquilino)</td>
                                <td>@Html.DisplayFor(_ => item.idInmueble)</td>
                                <td class="text-end">@Html.DisplayFor(_ => item.monto)</td>
                                <td class="text-nowrap">@item.fechaDesde.ToString("dd/MM/yyyy")</td>
                                <td class="text-nowrap">@item.fechaHasta.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">@Html.DisplayFor(_ => item.idUsuarioAlta)</td>
                                <td class="text-end">@Html.DisplayFor(_ => item.idUsuarioBaja)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer text-end">
            <a class="btn btn-outline-info" asp-action="Index">Regresar</a>
        </div>
    </div>
</div>
