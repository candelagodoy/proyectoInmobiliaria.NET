@model proyectoInmobiliaria.NET.Models.Inmueble
@{
	ViewData["Title"] = "Editar Inmueble";
	IList<Propietario>? ltaPropietarios = (IList<Propietario>)ViewBag.Propietarios;
	IList<TipoInmueble>? ltaTipoInmueble = (IList<TipoInmueble>)ViewBag.Tipos;
}

<h4>Editar Inmueble</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" name="IdInmueble" value="@Model.idInmueble" />
			<div class="form-group">
				<label asp-for="direccion" class="control-label"></label>
				<input asp-for="direccion" class="form-control" />
				<span asp-validation-for="direccion" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="uso" class="control-label"></label>
				<select asp-for="uso" asp-items="ViewBag.Usos" class="form-control"></select>
			</div>
			<div class="form-group">
				<label class="control-label">Tipo Inmueble</label>
				<select class="form-control" name="idTipoInmueble">
                
					@foreach (TipoInmueble item in ltaTipoInmueble)
					{
						<option value="@item.idTipoInmueble">@(item.ToString())</option>
					}
                    <option value="null" selected >---Seleccione un tipo de inmueble---</option>
				</select>
				<span asp-validation-for="idTipoInmueble" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="cantidadAmb" class="control-label"></label>
				<input asp-for="cantidadAmb" class="form-control" />
				<span asp-validation-for="cantidadAmb" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="coordenadas" class="control-label"></label>
				<input asp-for="coordenadas" class="form-control" />
				<span asp-validation-for="coordenadas" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="precio" class="control-label"></label>
				<input asp-for="precio" class="form-control" />
				<span asp-validation-for="precio" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">Propietario</label>
				<select class="form-control" name="idPropietario">
					@foreach (var item in ltaPropietarios)
					{
						if (item.id == ViewBag.PropietarioSelected)
						{
							<option value="@item.id" selected="selected">@(item.ToString())</option>
						}
						else
						{
							<option value="@item.id">@(item.ToString())</option>
						}

					}
				</select>
				<span asp-validation-for="idPropietario" class="text-danger"></span>
			</div>
			<div class="form-group form-check m-2">
				<input asp-for="estado" class="form-check-input" type="checkbox" />
				<label asp-for="estado" class="form-check-label">Estado</label>
			</div>

			<div class="form-group">
				<input type="submit" value="Guardar" class="btn btn-primary m-2" />
			</div>
		</form>
	</div>
</div>

<div>
	<a class="btn btn-primary m-2" asp-action="Index">Volver</a>
</div>