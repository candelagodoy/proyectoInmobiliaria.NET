@model proyectoInmobiliaria.NET.Models.Usuario

@{
    ViewData["Title"] = "Perfil";
}
<div class="image-container">

    <h1 class="text-lg-center bg-info font-italic text-white">Perfil</h1>
    <br />
    <br />

    <div>
        <h4 class="bg-dark text-white text-lg-center">Datos Personales</h4>
        <hr />
        <form>
            <div class="form-group text-lg-center ">
                <label asp-for="avatar" class="control-label" hidden></label><br />
                @if (Model.avatar != "")
                {
                    <img src="@Model.avatar" height="300" width="300" style="border: silver 10px solid;" /> }
                else
                {
                    <p>Sin avatar</p>}
                <input asp-for="avatar" value="@Model.avatar" class="form-control" hidden />

            </div>
        </form>
        <div>
            <dl class="row " style="height: 300px" >
                <dt class="col-sm-2" hidden>
                    @Html.DisplayNameFor(model => model.idUsuario)
                </dt>
                <dd class="col-lg-10" hidden>
                    @Html.DisplayFor(model => model.idUsuario)
                </dd>
                <dt  class="col-lg-2"style="font-size:x-large;font-family:'Century Gothic'; font-weight:600">
                    @Html.DisplayNameFor(model => model.nombre):
                </dt>
                <dd class="col-lg-10"style="        font-size: x-large;
        font-family: 'Century Gothic' ;font-weight:600">
                    @Html.DisplayFor(model => model.nombre)
                </dd>
                <dt class="col-sm-2"style="        font-size: x-large;
        font-family: 'Century Gothic' ;font-weight:600">
                    @Html.DisplayNameFor(model => model.apellido):
                </dt>
                <dd class="col-sm-10"style="font-size: x-large;font-family: 'Century Gothic';font-weight:600">
                    @Html.DisplayFor(model => model.apellido)
                </dd>
                <dt class="col-sm-2"style="font-size: x-large;font-family: 'Century Gothic' ;font-weight:600">
                    @Html.DisplayNameFor(model => model.email):
                </dt>
                <dd class="col-sm-10"style="font-size: x-large;font-family: 'Century Gothic'; font-weight:600">
                    @Html.DisplayFor(model => model.email)
                </dd>
                <dt class="col-sm-2" hidden>
                    @Html.DisplayNameFor(model => model.clave)
                </dt>
                <dd class="col-sm-10" hidden>
                    @Html.DisplayFor(model => model.clave)
                </dd>
                <dt class="col-sm-2"style="font-size: x-large;font-family: 'Century Gothic'; font-weight:600">
                    @Html.DisplayNameFor(model => model.rol):
                </dt>
                <dd class="col-sm-10"style="font-size: x-large;font-family: 'Century Gothic' ;font-weight:600">
                    @Html.DisplayFor(model => model.rol)
                </dd>

            </dl>
        </div>
    </div>
    <div>

        <a asp-action="Index" class="btn btn-info">Volver al Listado</a>
    </div>
    </div>