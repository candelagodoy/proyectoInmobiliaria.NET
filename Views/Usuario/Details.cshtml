@model proyectoInmobiliaria.NET.Models.Usuario
@{
    ViewData["Title"] = "Perfil";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm border-0">

                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fa fa-id-badge me-2"></i>Perfil</h5>
                    <span class="small text-white-50">ID @Model?.idUsuario</span>
                </div>

                <div class="card-body">
                    <div class="row g-4 align-items-center">
                        <!-- Avatar -->
                        <div class="col-12 col-md-4 text-center">
                            @if (!string.IsNullOrWhiteSpace(Model?.avatar))
                            {
                                <img src="@Model.avatar" alt="Avatar" class="img-fluid img-thumbnail rounded"
                                    style="max-height:240px;" />
                            }
                            else
                            {
                                <div class="bg-light border rounded d-inline-flex align-items-center justify-content-center text-muted"
                                    style="width:240px; height:240px;">
                                    <i class="fa fa-user fa-4x"></i>
                                </div>
                            }
                        </div>

                        <!-- Datos -->
                        <div class="col-12 col-md-8">
                            <h6 class="text-uppercase text-muted mb-3">Datos personales</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-4 text-muted">Nombre</dt>
                                <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(m => m.nombre)</dd>

                                <dt class="col-sm-4 text-muted">Apellido</dt>
                                <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(m => m.apellido)</dd>

                                <dt class="col-sm-4 text-muted">E-mail</dt>
                                <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(m => m.email)</dd>

                                <dt class="col-sm-4 text-muted">Rol</dt>
                                <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(m => m.rolNombre)</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white d-flex justify-content-between">
                     @if (!User.IsInRole("Administrador")){
                         <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fa fa-arrow-left me-1"></i> Volver
                    </a>
                     }else{
                         <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fa fa-arrow-left me-1"></i> Volver
                    </a>
                     }
                   
                    @if (ViewBag.UsuarioLogin.idUsuario == Model.idUsuario)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.idUsuario" class="btn btn-primary">
                            <i class="fa fa-pen me-1"></i> Editar perfil
                        </a>
                    }
                </div>

            </div>
        </div>
    </div>
</div>