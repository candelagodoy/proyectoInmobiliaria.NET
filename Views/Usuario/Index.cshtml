@model IEnumerable<proyectoInmobiliaria.NET.Models.Usuario>

@{
	ViewData["Title"] = "Home Page";
}

<h1>
	Usuarios
	<div class="btn-group pull-right">
		<a class="btn btn-primary" asp-action="Registrar" title="Crear"> Crear </a>
	</div>
</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.idUsuario)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.nombre)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.apellido)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.rol)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Usuario item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.idUsuario)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.nombre)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.apellido)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.rolNombre)
				</td>
				<td>
					<div class="btn-group" role="group">
						<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.idUsuario" title="Editar">
							Editar
						</a>
						<a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@item.idUsuario" title="Eliminar">
						Eliminar	
						</a>
					</div>
				</td>
			</tr>
		}	
	</tbody>
</table>
