@model proyectoInmobiliaria.NET.Models.Usuario
@{
    ViewData["Title"] = "Login";
}

<div class="container min-vh-100 d-flex py-5">
    <div class="row justify-content-center w-100">
        <div class="col-12 col-md-8 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white text-center py-3">
                    <h1 class="h4 mb-0"><i class="fa fa-sign-in-alt mr-2"></i>Ingresar</h1>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Login">

                        @if (!ViewData.ModelState.IsValid )
                        {
                            <div class="alert alert-danger pb-2 small " role="alert" asp-validation-summary="ModelOnly">
                            </div>

                        }
                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label asp-for="email" class="control-label font-weight-semibold">
                                <i class="fa fa-user-circle mr-1"></i> E-mail
                            </label>
                            <div class="input-group">
                                <input asp-for="email" class="form-control" type="email"
                                    placeholder="Correo Electronico" />
                            </div>

                        </div>

                        <!-- Password -->
                        <div class="form-group mb-4">
                            <label asp-for="clave" class="control-label font-weight-semibold">
                                <i class="fa fa-unlock-alt mr-1"></i> Contraseña
                            </label>
                            <div class="input-group">
                                <input asp-for="clave" class="form-control" id="password" type="password"
                                    placeholder="Contraseña" />
                                <div class="input-group-append">
                                    <button id="show_password" class="btn btn-outline-secondary" type="button"
                                        onclick="mostrarPassword()">
                                        <span class="fa fa-eye-slash icon"></span>
                                    </button>
                                </div>
                            </div>

                        </div>

                        <!-- Botón -->
                        <div class="form-group mb-0">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">
                                <i class="fa fa-sign-in-alt mr-1"></i> Ingresar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function mostrarPassword() {
        let input = document.getElementById("password");
        let icon = document.querySelector("#show_password .icon");

        if (input.type === "password") {
            input.type = "text";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        } else {
            input.type = "password";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        }
    }
</script>

