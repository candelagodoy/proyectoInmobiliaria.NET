<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inmobiliaria F&C </title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/proyectoInmobiliaria.NET.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/img/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        /* Ajustes sutiles de tamaño/espaciado */
        .navbar-nav .nav-link {
            padding: .5rem .75rem;
        }

        .navbar-brand {
            letter-spacing: .5px;
        }
    </style>

</head>


<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary bg-gradient border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-uppercase fw-bold fs-5 text-white" asp-controller="Home" asp-action="Index">
                    Inmobiliaria F&amp;C
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNav" class="collapse navbar-collapse">
                    <!-- IZQUIERDA -->
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0 fw-semibold fs-6">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Propietario"
                                    asp-action="Index">Propietarios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Inquilino" asp-action="Index">Inquilinos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Inmueble" asp-action="Index">Inmuebles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Contrato" asp-action="Index">Contratos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Pago" asp-action="Index">Pagos</a>
                            </li>
                            @if (User.IsInRole("Administrador"))
                            {

                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Usuario" asp-action="Index">Usuarios</a>
                                </li>

                            }
                        }
                    </ul>

                    <!-- DERECHA -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav ms-auto mb-2 mb-sm-0">
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-light btn-sm px-3" asp-controller="Usuario" asp-action="Details"
                                    asp-route-id="@User.FindFirst("Id")?.Value">
                                    <i class="fa fa-user me-1"></i> Ver perfil
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-light btn-sm text-primary px-3" asp-controller="Usuario"
                                    asp-action="Logout">
                                    <i class="fa fa-right-from-bracket me-1"></i> Cerrar sesión
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Inmobiliaria F&C - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>



</html>