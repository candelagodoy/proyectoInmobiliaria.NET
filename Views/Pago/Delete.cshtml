@model proyectoInmobiliaria.NET.Models.Pago

@{
    ViewData["Title"] = "Eliminar";
}

<p>
    <h1 class="bg-info font-italic text-white text-lg-center">Eliminar registro</h1>
    <br />
    <br />
    <br />
    <h3 class="text-lg-center bg-danger text-white"> ¿Está seguro que desea eliminar el siguiente registro de Pago?</h3>
</p>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2" hidden>
            <label>Codigo Pago</label>
        </dt>
        <dd class="col-sm-10" hidden>
            @Html.DisplayFor(model => model.idPago)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.numPago)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.numPago)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.idContrato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.idContrato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fechaPago)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fechaPago)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.importe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.importe)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.idUsuarioBaja)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.idUsuarioBaja)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Borrar Pago" class="btn btn-danger" />  |
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
    </form>
</div>

