@model proyectoInmobiliaria.NET.Models.Pago

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container-xxl py-3">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h1 class="h5 mb-0 fw-semibold">Eliminar registro</h1>
        </div>

        <div class="card-body">
            <div class="alert alert-danger" role="alert">
                <strong>¿Estás seguro?</strong> Esta acción eliminará el registro de pago seleccionado.
            </div>

            <dl class="row">
                <!-- idPago oculto en UI, pero visible en form como hidden -->
                <dt class="col-sm-3">N.º de pago</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.numPago)</dd>

                <dt class="col-sm-3">Contrato</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.idContrato)</dd>

                <dt class="col-sm-3">Fecha de pago</dt>
                <dd class="col-sm-9">@Model.fechaPago.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Importe</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.importe)</dd>

                <dt class="col-sm-3">Usuario baja</dt>
                <dd class="col-sm-9">@ViewBag.UsuarioLogin.idUsuario</dd>
            </dl>

            <form asp-action="Delete" class="d-flex gap-2">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="idPago" />
                <button type="submit" class="btn btn-danger">
                    Borrar pago
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Volver al listado
                </a>
            </form>
        </div>
    </div>
</div>
