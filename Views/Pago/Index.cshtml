@model IEnumerable<proyectoInmobiliaria.NET.Models.Pago>

@{
    ViewData["Title"] = "Pago";
}

<h1 class="text-lg-center bg-info font-italic text-white">Registro de Pagos</h1>
<br />
<br />

<div class="btn-group pull-right">
    <a class="btn btn-primary" asp-action="Create" title="Crear"> Registrar nuevo pago </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.numPago)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.idContrato)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.fechaPago)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.importe)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.estado)
            </th>
            @if ((User.IsInRole("Administrador")))
            {
                <th class="bg-light">
                    @Html.DisplayNameFor(model => model.idUsuarioAlta)
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.numPago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.idContrato)
                </td>
                <td>
                    @item.fechaPago.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.importe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>
                @if ((User.IsInRole("Administrador")))
                {
                    <td>
                        @Html.DisplayFor(modelItem => @item.idUsuarioAlta )
                    </td>
                }

                <td>
					<div class="btn-group" role="group">
						<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.idPago" title="Editar">
							Editar
						</a>
						@if (User.IsInRole("Administrador")) {
							<a class="btn btn-danger btnOpcion" asp-action="Delete" asp-route-id="@item.idPago"
							title="Eliminar">
							Eliminar
						</a>
						}
					</div>
				</td>
                
            </tr>
        }
    </tbody>
</table>
@if(User.IsInRole(role:"Administrador")){
    <div class="btn-group pull-right">
    <a class="btn btn-primary" asp-action="Anulados" title="Crear"> Pagos anulados </a>
    </div>
}
