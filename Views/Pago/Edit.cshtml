@model proyectoInmobiliaria.NET.Models.Pago

@{
	ViewData["Title"] = "Editar descripci처n de pago";
}

<div class="container-xxl py-3">
	<div class="card shadow-sm">
		<div class="card-header bg-info text-white">
			<h4 class="mb-0 fw-semibold">Editar descripci처n de pago</h4>
		</div>

		<div class="card-body">
			<dl class="row">
				<dt class="col-sm-4">Codigo de Pago</dt>
				<dd class="col-sm-8">@Model.idPago</dd>
				
				<dt class="col-sm-4">N째 Pago</dt>
				<dd class="col-sm-8">@Model.numPago</dd>

				<dt class="col-sm-4">N째 Contrato</dt>
				<dd class="col-sm-8">@Model.idContrato</dd>

				<dt class="col-sm-4">Usuario Alta</dt>
				<dd class="col-sm-8">@ViewBag.Usuario?.ToString()</dd>

				<dt class="col-sm-4">Fecha de Pago</dt>
				<dd class="col-sm-8">@Model.fechaPago.ToString("dd/MM/yyyy")</dd>

				<dt class="col-sm-4">Importe $</dt>
				<dd class="col-sm-8">@Model.importe</dd>

				@if (ViewBag.UsuarioBaja != null)
				{
					<dt class="col-sm-4">Usuario Baja</dt>
					<dd class="col-sm-8">@ViewBag.UsuarioBaja.ToString()</dd>
				}
			</dl>

			<form asp-action="Edit" class="mt-3">
				<div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
				<div class="mb-3">
					<label asp-for="descripcion" class="form-label"></label>
					<input asp-for="descripcion" class="form-control" />
					<span asp-validation-for="descripcion" class="text-danger"></span>
					<input asp-for="idPago" type="hidden" value="@Model.idPago" />
				</div>
				<div class="d-flex gap-2">
					<button type="submit" class="btn btn-primary">
						<i class="bi bi-save"></i> Guardar
					</button>
					<a class="btn btn-outline-secondary" asp-action="Index">
						<i class="bi bi-arrow-left"></i> Volver
					</a>
				</div>
			</form>
		</div>
	</div>
</div>