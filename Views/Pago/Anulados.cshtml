@model IEnumerable<proyectoInmobiliaria.NET.Models.Pago>

<h1 class="text-lg-center bg-info font-italic text-white">Pagos anulados</h1>
<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.numPago)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.idContrato)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.fechaPago)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.importe)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.estado)
            </th>
            @if ((User.IsInRole("Administrador")))
            {
                <th class="bg-light">
                    @Html.DisplayNameFor(model => model.idUsuarioAlta)
                </th>
            }
            @if ((User.IsInRole("Administrador")))
            {
                @if (Model.Any(p => p.idUsuarioBaja != 0))
                {
                    <th>@Html.DisplayNameFor(m => m.idUsuarioBaja)</th>
                }
                else
                {
                    <th>No se anul√≥ el pago</th>
                }

            }

            <th class="bg-light"></th>
            <th class="bg-light"></th>
            <th class="bg-light"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.numPago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.idContrato)
                </td>
                <td>
                    @item.fechaPago.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.importe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.idUsuarioAlta)
                </td>
                <td>
                    @(item.idUsuarioBaja.ToString())
                </td>

            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    <a class="btn btn-info" asp-action="Index">Regresar</a>
</div>